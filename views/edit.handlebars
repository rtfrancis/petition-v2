<div class="profileEditPage">
    <h1>Edit your profile</h1>
    {{#if error}}
        <div class="error">Oh no! Something went wrong!</div>
    {{/if}}

    <form id="profileEdit" method="POST">

        <div class="flex-grid">
            <div class="col">
                <span>First Name:</span>
                <br>
                <input type="text" name="first" value="{{first}}">
            </div>
            <div class="col">
                <span>Last Name:</span>
                <br>
                <input type="text" name="last" value="{{last}}">
            </div>
        </div>
        <div class="flex-grid">
            <div class="col">
                <span>Email Address:</span>
                <br>
                <input type="email" name="email" value="{{email}}" required>
            </div>
            <div class="col">
                <span>Password:</span>
                <br>
                <input type="password" name="password" value="">
            </div>
        </div>
        <div class="flex-grid">
            <div class="col">
                <span>Age:</span>
                <br>
                <input type="text" name="age" value="{{age}}">
            </div>
            <div class="col">
                <span>City:</span>
                <br>
                <input type="text" name="city" value="{{city}}">
            </div>
        </div>
        <div class="flex-grid">
            <div class="col">
                <span >Homepage:</span>
                <br>
                <input id="urlInput" type="url" name="url" value="{{url}}">

            </div>
        </div>


